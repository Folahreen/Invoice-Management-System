@model Invoice_Management_System.Models.Clients
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-info" id="create"> Create Client </h2>
<br />

<form method="post" asp-action="Create">
    <div class="border backgroundWhite">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-md-2">
                <label asp-for="ClientName" class="col-md-form-label text-info font-weight-bold"></label>
            </div>
            <div class="col-md-5">
                <input asp-for="ClientName" class="form-control" />
            </div>
            <span asp-validation-for="ClientName" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-md-2">
                <label asp-for="PhoneNumber" class="col-md-form-label text-info font-weight-bold"></label>
            </div>
            <div class="col-md-5">
                <input asp-for="PhoneNumber" class="form-control" />
            </div>
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-md-5 offset-md-2">
                <partial name="_CreateAndBackToListButton" />
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}