@model IEnumerable<Clients>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />

<div class="border backgroundWhite">
    <div class="row">
        <div class="col-6 text-info">
            <h2>Client List</h2>
        </div>
        <partial name="_CreateButtonPartial" />
    </div>
    @if (Model.Count() > 0)
    {
        <div class="pt-3">
            <table class="table table-striped border">
                <tr>
                    <th>@Html.DisplayNameFor(m => m.ClientName)</th>
                    <th>@Html.DisplayNameFor(m => m.PhoneNumber)</th>
                    <th></th>
                    <th></th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(m => item.ClientName)</td>
                        <td>@Html.DisplayFor(m => item.PhoneNumber)</td>
                        <td>
                            <partial name="_TableButtonPartial" model="item.ClientId" />
                        </td>
                    </tr>
                }
            </table>
        </div>

    }
    else
    {
        <p>No Client exist....</p>
    }
</div>

