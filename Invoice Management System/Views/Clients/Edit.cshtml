@model Invoice_Management_System.Models.Clients

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-info"> Edit Client </h2>
<br />

<form method="post" asp-action="Edit">
    <div class="border backgroundWhite">
        <div asp-validation-summary="ModelOnly"></div>
        <input type="hidden" asp-for="ClientId"/>
        <div class="form-group row">
            <div class="col-md-2">
                <label asp-for="ClientName" class="text-info font-weight-bold"></label>
            </div>
            <div class="col-md-5">
                <input asp-for="ClientName" class="form-control" />
            </div>
            <span asp-validation-for="ClientName" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-md-2">
                <label asp-for="PhoneNumber" class="text-info font-weight-bold"></label>
            </div>
            <div class="col-md-5">
                <input asp-for="PhoneNumber" class="form-control" />
            </div>
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-md-5 offset-md-2">
                <partial name="_EditAndBackToListButton" model="Model.ClientId" />
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}