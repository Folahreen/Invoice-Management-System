@model Invoice_Management_System.Models.InvoiceModel
@{
    ViewData["Title"] = "RetrieveInvoice";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<br />
<h2 class="text-info"> Retrieve Invoice </h2>
<br />

<form method="post" asp-action="Index">
    <div class="border backgroundWhite">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-md-2">
                <label asp-for="InvoiceDate" class="col-md-form-label text-info font-weight-bold"></label>
            </div>
            <div class="col-md-5">
                <input asp-for="InvoiceDate" class="form-control" />
            </div>
            <span asp-validation-for="InvoiceDate" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-md-5 offset-md-2">
                <partial name="_RetrieveAndBackToCreateButton" />
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}